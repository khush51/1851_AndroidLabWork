<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue"
                android:layout_gravity="center_horizontal"
                android:text="@string/details"/>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">
                <TableRow
                    android:layout_height="wrap_content"
                    android:background="@color/lightPink">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:paddingRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/constraint" />

                    <TextView
                        android:id="@+id/textView4"
                        android:text="@string/constraintInfo"
                        android:maxWidth="190dp"/>

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:background="@color/grey">

                    <TextView
                        android:id="@+id/textView5"
                        android:paddingRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:text="@string/relative" />

                    <TextView
                        android:id="@+id/textView6"
                        android:text="@string/relativeInfo"
                        android:maxWidth="190dp"/>

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:background="@color/lightPink">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:paddingRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/linear" />

                    <TextView
                        android:id="@+id/textView8"
                        android:text="@string/linearInfo"
                        android:maxWidth="190dp"/>

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:background="@color/grey">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:paddingRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/frame" />

                    <TextView
                        android:id="@+id/textView10"
                        android:text="@string/frameInfo"
                        android:maxWidth="190dp"/>

                </TableRow>
                <TableRow android:layout_width="fill_parent"
                    android:background="@color/lightPink">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/table" />

                    <TextView
                        android:id="@+id/textView12"
                        android:text="@string/tableInfo"
                        android:maxWidth="190dp"/>

                </TableRow>

            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:text="@string/naam"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:id="@+id/name_to_be_passed"
                    android:layout_height="wrap_content"
                    android:hint="@string/naam"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/next"
                android:text="@string/next"/>
        </LinearLayout>
        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>